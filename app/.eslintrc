{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "airbnb"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": "webpack"
  },
  "rules": {
    "strict"                  : [2, "safe"],
    "semi"                    : "off",
    "no-empty-label"          : "off",
    "no-process-env"          : "off",
    "space-after-keywords"    : "off",
    "space-before-keywords"   : "off",
    "space-return-throw-case" : "off",
    "key-spacing"             : 0,
    "max-len"                 : [2, 120, 2],
    "object-curly-spacing"    : [2, "always"],
    "comma-dangle"            : 0,
    "no-multi-spaces"         : [2, {"exceptions": {"VariableDeclarator": true}}],
    "no-extra-semi"           : 1,
    "no-unreachable"          : 1
  }
}
